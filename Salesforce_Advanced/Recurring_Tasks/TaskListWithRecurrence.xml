								<formula>LEFT({{WeekdayDaysOfWeekInProgress}},LEN({{WeekdayDaysOfWeekInProgress}}) - 1)</formula>
							</update>
						</updates>
					</action>
				</actions>
				<inputs/>
			</actionsequence>
