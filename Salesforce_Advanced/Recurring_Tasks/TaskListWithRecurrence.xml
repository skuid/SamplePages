				<description>Converts an integer to it's binary and then uses binary to update multipicklist of weekdays selected</description>
				<actions>
					<action type="branch" whenfinished="continue" label="if no integer yet, update it">
						<formula>!{{$Model.TaskDetails.data.0.WeekdayIntegerInProgress}}</formula>
						<iftrueactions>
							<action type="updateRow" fieldmodel="TaskDetails" affectedrows="context">
								<updates>
									<update valuesource="modelmerge" field="WeekdayIntegerInProgress" enclosevalueinquotes="false" sourcemodel="TaskDetails" sourcefield="RecurrenceDayOfWeekMask"/>
								</updates>
							</action>
						</iftrueactions>
					</action>
					<action type="updateRow" fieldmodel="TaskDetails" affectedrows="context">
						<updates>
							<update valuesource="formula" field="WeekdayIntegerInProgress" enclosevalueinquotes="false">
								<formula>FLOOR({{$Model.TaskDetails.data.0.WeekdayIntegerInProgress}}/2)</formula>
							</update>
							<update valuesource="formula" field="WeekdayBinaryInProgress" enclosevalueinquotes="true">
								<formula>{{$Model.TaskDetails.data.0.WeekdayIntegerInProgress}}%2 + '' + 
IF({{$Model.TaskDetails.data.0.WeekdayBinaryInProgress}},{{$Model.TaskDetails.data.0.WeekdayBinaryInProgress}},'')</formula>
							</update>
						</updates>
					</action>
					<action type="branch" whenfinished="stop" label="if haven't finished converting to binary, carry on">
						<formula>{{$Model.TaskDetails.data.0.WeekdayIntegerInProgress}} != 0</formula>
						<iftrueactions>
							<action type="action-sequence" action-sequence-id="31039563-a402-47c9-8113-774ddfeedc48"/>
						</iftrueactions>
					</action>
